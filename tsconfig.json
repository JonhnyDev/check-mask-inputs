{
    "compilerOptions": {
      "target": "es5",
      "lib": ["es2015", "es2016", "es2017", "es2018", "es2019", "es2020", "es2021", "dom"],
      "module": "commonjs",
      "outDir": "./dist",
      "strict": true,
      "noUnusedLocals": true,
      "noUnusedParameters": true,
      "noImplicitReturns": true,
      "noFallthroughCasesInSwitch": true,
      "esModuleInterop": true
    },
    "include": ["src/**/*"],
    "exclude": ["node_modules", "**/*.test.ts", "app/example.ts"]
  }